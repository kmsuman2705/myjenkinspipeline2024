pipeline {
    agent {
        label "linuxlabelnode"
    }
    
    stages {
        stage('SCM') {
            steps {
                git 'https://github.com/vimallinuxworld13/jenkins-docker-maven-java-webapp.git'
            }
        }
        
        stage('Build by Maven Package') {
            steps {
                sh 'mvn clean package'
            }
        }
        
        
        stage('Build Docker Own image') {
            steps {
                sh "sudo docker build -t hellotestimage1:${BUILD_TAG} ."
                //sh 'whoami'
            }
        }
         stage('Push Image to Docker HUB') {
            steps {
                withCredentials([string(credentialsId: 'DOCKER_HUB_PWD', variable: 'DOCKER_HUB_PASS_CODE')]) {
    // some block
}
                sh "docker login -u kmsuman27 -p $DOCKER_HUB_PWD"
                sh "docker push hellotestingimage1:${BUILD_TAG}"
            }
        }
    }
}
